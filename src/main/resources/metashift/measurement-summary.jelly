<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:sc="/metashift/charts">
<st:adjunct includes="io.jenkins.plugins.bootstrap4"/>
  <j:new var="h" className="hudson.Functions" />
  <j:choose>
    <j:when test="${evaluator.available}">
      <div class="summary col-2 rounded shadow ${evaluator.qualified ?
        'bg-success':'bg-danger'} text-white" style="margin: 5px;">
        <div class="row">
          <b class="title">${title}</b>
        </div>
        <div class="row">
          <b class="ratio">${it.getFixedFloat('#.##', evaluator.ratio * 100)}%</b>
        </div>
        <div class="row">
          <p class="text-white description"> ${evaluator.numerator} / ${evaluator.denominator} </p>
        </div>
      </div>
    </j:when>
    <j:otherwise>
      <div class="summary col-2 rounded shadow bg-secondary text-white" style="margin: 5px;">
        <div class="row">
          <b class="title">${title}</b>
        </div>
        <div class="row">
          <b class="ratio">N/A</b>
        </div>
        <div class="row">
          <p class="text-white description"> -- / -- </p>
        </div>
      </div>
    </j:otherwise>
  </j:choose>
</j:jelly>